#!/bin/sh

# PROVIDE: rtorrent-flood
# REQUIRE: rtorrent
# KEYWORD: shutdown

. /etc/rc.subr

name="rtorrent_flood"
desc="rTorrent Flood Daemon"
rcvar="rtorrent_flood_enable"
workdir="/home/rtorrent/flood"

pidfile="${workdir}/rtorrent_flood.pid"
daemon_log="${workdir}/flood.log"
daemon_user="rtorrent_flood"
command="/usr/sbin/daemon"
command_args="-o ${daemon_log} -P ${pidfile} -u ${daemon_user} flood"

load_rc_config $name
run_rc_command "$1"
